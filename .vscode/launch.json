  "version": "0.2.0",
  "configurations": [
    {
      "name": "GPU Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/gpu_test.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "CUDA_VISIBLE_DEVICES": "1"
      }
    },
    {
      "name": "Generate Augmented Copies",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/generate_augmented_copies.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "CUDA_VISIBLE_DEVICES": "0"
      },
      "args": [
        "--num_aug",
        "100",
        "--num_samples",
        "500",
        // "--mode_slice",
        "--angle_max",
        "0.2",
        "--shift_max",
        "5",
        "--backbone",
        "xception"
      ]
    },
    {
      "name": "Download VOC",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/download_and_prepare_voc.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--remove_cmap",
        "--download_berkley"
      ]
    }
  ]
}